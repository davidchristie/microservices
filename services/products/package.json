{
  "dependencies": {
    "@apollo/federation": "latest",
    "apollo-server": "latest",
    "graphql": "latest",
    "neo4j-driver": "^1.7.6",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@types/uuid": "^3.4.5",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "source/**/*.{js,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "name": "products",
  "nodemonConfig": {
    "exec": "ts-node ./source/index.ts",
    "ext": "ts",
    "ignore": [
      "**/*.test.ts"
    ],
    "watch": [
      "source"
    ]
  },
  "private": true,
  "scripts": {
    "api:development": "nodemon",
    "api:production": "node build/index.js",
    "build": "tsc",
    "test": "jest"
  }
}
